{
  "env": {
    "node": true,
    "browser": false,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "semi": ["warn", "always", { "omitLastInOneLineBlock": true }],
    "quotes": ["warn", "double"]
  }
}
